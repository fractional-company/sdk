{
  "include": ["src/**/*.ts"],
  "exclude": ["test", "node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
